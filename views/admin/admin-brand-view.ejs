<%-include('admin-header')-%>
<div class="row mb-3">
  <div class="col-lg-7 col-md-7 mt-5 ms-5 ps-4">
    <h4>View Brands</h4>
  </div>
  <div class="col-lg-4 col-md-4 mt-5 me-5 pe-4 d-flex justify-content-end" >
    <a href="/adminauth/addbrand" class="btn btn-success" style="background-color: rgb(57, 135, 244);color: white;">Add brand</a>
  </div>
</div>


                <div class="col py-3">
                    <div class="container">
                        
                        <% if (data!=''){ %>
                        <table class="table mt-5" id="myTable">
                            <thead>
                              <tr class="table">
                                <th scope="col">No</th>
                                <th scope="col">Brand Name</th>
                                <th scope="col">Actions</th>
                                
                                
                                


                              </tr>

                            </thead>
                            <tbody>
                                <% data.forEach((value,index) =>{ %>
                              <tr>
                                <td><%= index+1 %></td>
                                <td><%= value.name %></td>
                                <td><a href="/adminauth/editbrand/<%= value._id %>"><i class="fa-solid fa-pen-to-square text-success"></i></a><a href="/adminauth/deletebrand/<%= value._id %>"><i
                                    class="fa-solid fa-trash text-danger ms-3"></i></a></td>

                              </tr>
                              <% }) %>
                            </tbody>
                          </table>
                          <% } else { %>
                            <h1 class="text-center text-secondary mt-5">No Brand found in the database</h1>
        
        
                        <% } %>
                    </div>
                    
                    
                 
                </div>
                <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
                <script>
                  // let table = new DataTable('#myTable');
                  $(document).ready(function () {
                    $('#myTable').DataTable();
                  });
                </script>
<%-include('admin-footer')-%>